<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= image_tag pin.image.url(:thumb) %>
      <div class="panel-body">
        <%= pin.description %>
        <%= pin.user.email if pin.user %>
        <%= pin.string %>
        <div class="btn-group">
          <%= link_to 'Show', pin, class: "btn btn-primary btn-xs" %>
          <% if pin.user == current_user %>
            <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-primary btn-xs" %>
            <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-primary btn-xs" %>
          <% end %>
        </div>
      </div>
  <% end %>
</div>
